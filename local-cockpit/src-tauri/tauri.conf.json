{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "local-cockpit",
  "version": "0.1.0",
  "identifier": "com.reqcockpit.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "The Local Cockpit",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "dialog": {
        "open": true
      },
      "shell": {
        "open": true
      }
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        "python3",
        "python"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
